{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "params": [
    {
      "name": "disease_selection",
      "value": "Cholera",
      "bind": {
        "input": "select",
        "options": ["Cholera","Dysentry","Food poisoning","Typhoid","Viral Hepatitis A"],
        "labels": ["Cholera","Dysentry","Food Poisoning","Typhoid","Viral Hepatitis A"],
        "name": "Select Disease: "
      }
    }
  ],

  "width": "container",
  "height": 600,
  "autosize": { "type": "fit", "contains": "padding" },
  "padding": { "right": 20 },

  "title": ["Incidence Rate vs Number of", "Infectious Disease Cases by Year"],

  "data": {
    "url": "https://raw.githubusercontent.com/Somkiet0126/FIT3179-Assignment-2/main/Number%20of%20Cases%20of%20Infectious%20Diseases%20v2.csv",
    "format": { "type": "csv", "parse": { "Year": "number" } }
  },

  "transform": [
    { "filter": "datum['Infectious Diseases'] == disease_selection" }
  ],

  "layer": [
    {
      "mark": { "type": "circle", "opacity": 0.8, "stroke": "black", "strokeWidth": 0.5 },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelAngle": 0,
            "grid": true,
            "gridColor": "#e5e7eb",
            "gridWidth": 0.8,
            "tickBand": "center"
          }
        },
        "y": {
          "field": "Incidence Rate",
          "type": "quantitative",
          "title": "Incidence Rate (per 100,000 people)",
          "axis": { "grid": true, "gridColor": "#f0f0f0", "gridWidth": 0.8 }
        },
        "size": {
          "field": "Number of Cases",
          "type": "quantitative",
          "title": "Number of Cases",
          "scale": { "range": [30, 800] },
          "legend": { "orient": "right", "titleFontSize": 12, "labelFontSize": 11 }
        },
        "color": { "value": "#3b82f6" },
        "tooltip": [
          { "field": "Year", "title": "Year" },
          { "field": "Infectious Diseases", "title": "Disease" },
          { "field": "Number of Cases", "title": "Cases" },
          { "field": "Incidence Rate", "title": "Incidence Rate" }
        ]
      }
    },

    {
      "data": {
        "values": [
          
          { "Infectious Diseases": "Cholera", "Year": 2012, "Incidence Rate": 1.0, "text": "Higher early 2010s" },
          { "Infectious Diseases": "Cholera", "Year": 2017, "Incidence Rate": 0.0, "text": "Near zero in 2017" },

          
          { "Infectious Diseases": "Dysentry", "Year": 2019, "Incidence Rate": 0.7, "text": "2019 peak" },

          
          { "Infectious Diseases": "Food poisoning", "Year": 2014, "Incidence Rate": 58.6, "text": "Highest in 2014" },
          { "Infectious Diseases": "Food poisoning", "Year": 2021, "Incidence Rate": 18.4, "text": "Pandemic low" },

          
          { "Infectious Diseases": "Typhoid", "Year": 2015, "Incidence Rate": 1.4, "text": "Spike in 2015" },
          { "Infectious Diseases": "Typhoid", "Year": 2020, "Incidence Rate": 0.2, "text": "2020 low" },

      
          { "Infectious Diseases": "Viral Hepatitis A", "Year": 2012, "Incidence Rate": 1.6, "text": "High in 2012" },
          { "Infectious Diseases": "Viral Hepatitis A", "Year": 2021, "Incidence Rate": 0.1, "text": "Very low by 2021" }
        ]
      },
      "transform": [
        { "filter": "datum['Infectious Diseases'] == disease_selection" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10,
        "dy": -20,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "black"
      },
      "encoding": {
        "x": { "field": "Year", "type": "ordinal" },
        "y": { "field": "Incidence Rate", "type": "quantitative" },
        "text": { "field": "text" }
      }
    }
  ],

  "config": {
    "title": { "fontSize": 18, "font": "Times New Roman", "anchor": "middle" },
    "axis": { "labelFontSize": 11, "titleFontSize": 14 }
  }
}
