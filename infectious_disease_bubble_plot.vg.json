{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "params": [
    {
      "name": "disease_selection",
      "value": "Cholera",
      "bind": {
        "input": "select",
        "options": ["Cholera","Dysentry","Food poisoning","Typhoid","Viral Hepatitis A"],
        "labels": ["Cholera","Dysentry","Food Poisoning","Typhoid","Viral Hepatitis A"],
        "name": "Select Disease: "
      }
    }
  ],

  "width": "container",
  "height": 670,
  "autosize": { "type": "fit", "contains": "padding" },
  "padding": { "right": 30 },

  "title": {
    "text": ["Incidence Rate vs Number of", "Infectious Disease Cases by Year"],
    "font": "Segoe UI",
    "fontSize": 17,
    "anchor": "middle",
    "frame": "bounds",
    "offset": 20
  },

  "data": {
    "url": "https://raw.githubusercontent.com/Somkiet0126/FIT3179-Assignment-2/main/Number%20of%20Cases%20of%20Infectious%20Diseases%20v2.csv",
    "format": { "type": "csv", "parse": { "Year": "number" } }
  },

  "transform": [
    { "filter": "datum['Infectious Diseases'] == disease_selection" }
  ],

  "layer": [
    {
      "mark": { "type": "circle", "opacity": 0.8, "stroke": "black", "strokeWidth": 0.5 },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelAngle": 0,
            "grid": true,
            "gridColor": "#e5e7eb",
            "gridWidth": 0.8,
            "tickBand": "center"
          }
        },
        "y": {
          "field": "Incidence Rate",
          "type": "quantitative",
          "title": "Incidence Rate (per 100,000 people)",
          "axis": { "grid": true, "gridColor": "#f0f0f0", "gridWidth": 0.8 }
        },
        "size": {
          "field": "Number of Cases",
          "type": "quantitative",
          "title": "Number of Cases",
          "scale": { "range": [300, 1500] },
          "legend": { "orient": "right", "titleFontSize": 12, "labelFontSize": 11 }
        },
        "color": { "value": "#3b82f6" },
        "tooltip": [
          { "field": "Year", "title": "Year" },
          { "field": "Infectious Diseases", "title": "Disease" },
          { "field": "Number of Cases", "title": "Cases" },
          { "field": "Incidence Rate", "title": "Incidence Rate" }
        ]
      }
    },

    {
      "data": {
        "values": [
          { "Infectious Diseases": "Cholera", "Year": 2012, "Incidence Rate": 1.0,  "text": "Elevated—water/sanitation gaps" },
          { "Infectious Diseases": "Cholera", "Year": 2017, "Incidence Rate": 0.0,  "text": "Near-zero—clean water & hygiene improved" },

          { "Infectious Diseases": "Dysentry", "Year": 2019, "Incidence Rate": 0.7, "text": "Pre-MCO outbreaks" },

          { "Infectious Diseases": "Food poisoning", "Year": 2014, "Incidence Rate": 58.6, "text": "Peak—restaurant/cluster outbreaks" },
          { "Infectious Diseases": "Food poisoning", "Year": 2021, "Incidence Rate": 18.4, "text": "Pandemic curbs reduced exposure" },

          { "Infectious Diseases": "Typhoid", "Year": 2015, "Incidence Rate": 1.4, "text": "Spike—localized outbreaks" },
          { "Infectious Diseases": "Typhoid", "Year": 2020, "Incidence Rate": 0.2, "text": "Record low—mobility limits" },

          { "Infectious Diseases": "Viral Hepatitis A", "Year": 2012, "Incidence Rate": 1.6, "text": "High—pre-vaccine uptake" },
          { "Infectious Diseases": "Viral Hepatitis A", "Year": 2021, "Incidence Rate": 0.1, "text": "Very low—vaccination & hygiene" }
        ]
      },
      "transform": [
        { "filter": "datum['Infectious Diseases'] == disease_selection" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10,
        "dy": -20,
        "font": "Segoe UI",
        "fontSize": 10,
        "fill": "black",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": { "field": "Year", "type": "ordinal" },
        "y": { "field": "Incidence Rate", "type": "quantitative" },
        "text": { "field": "text" }
      }
    }
  ],

  "config": {
    "title": { "font": "Segoe UI", "fontSize": 17, "anchor": "middle", "frame": "bounds" },
    "axis": { "labelFont": "Segoe UI", "titleFont": "Segoe UI", "labelFontSize": 11, "titleFontSize": 14 },
    "legend": { "labelFont": "Segoe UI", "titleFont": "Segoe UI" }
  }
}
